  
extends layouts/main

block content
    .form-container
        form(action=routers.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title", value=video.title,required=true)
            textarea(name="description", placeholder="Description",required=true)=video.description
            input(type="submit", value="Update Video",required=true)
        a.form-container__link(href=routers.deleteVideo(video.id))
            button.delete Delete Video